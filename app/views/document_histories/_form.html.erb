    <%= form.label :received_by_name %>
    <%= form.number_field :received_by_name, :class=>"form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :received_by_office %>
    <%= form.number_field :received_by_office, :class=>"form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :received_from_name %>
    <%= form.number_field :received_from_name, :class=>"form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :received_from_office %>
    <%= form.number_field :received_from_office, :class=>"form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :length_of_stay %>
    <%= form.number_field :length_of_stay, :class=>"form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :remarks %>
    <%= form.text_field :remarks, :class=>"form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :max_stay %>
    <%= form.number_field :max_stay, :class=>"form-control" %>
