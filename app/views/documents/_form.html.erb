<div class="container py-5">

<%= form_with(model: document, local: true) do |form| %>
  <% if document.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(document.errors.count, "error") %> prohibited this document from being saved:</h2>
      <ul>
      <% document.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="row justify-content-center">
  <div class="col-12">
  <div class="form-group">
    <%= form.label :subject %>
    <%= form.text_field :subject, :readonly => "readonly", :class=>"form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :status %>
    <%= form.text_field :status, :class=>"form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :date_created %>
    <%= form.date_select :date_created, :class=>"form-control col-sm-3" %>
  </div>

  <div class="form-group">
    <%= form.label :time_created %>
    <%= form.time_select :time_created, :class=>"form-control" %>
  </div>

  <div class="actions">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
</div>
</div>
<% end %>
</div>