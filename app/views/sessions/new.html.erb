

<%= form_tag sessions_path do %>
  <center>
  <div id="loginbox">
  <br />
  <h1>[Insert Logo Here]</h1>
  <h1>Log In</h1>
  <div class="field">
    
    <%= text_field_tag :username, params[:username], :placeholder => "Username", :size => "32" %>
  </div><br />
  <div class="field">
    
    <%= password_field_tag :password, params[:password], :placeholder => "Password", :size => "32" %>
  </div><br />
  <div class="actions"><%= submit_tag "Log In" %></div>
  <br />
  <p>For Forgotten Password, Please Contact Your Administrator.</p> 
  </div></center>
<% end %>